mixin cart-counter
  .cart-counter&attributes(attributes)
    +button('', '', 'minus').cart-counter__button.cart-counter__button--increase
    input.cart-counter__input(
      type='number'
      placeholder='0'
      step='1'
      min='0'
      max='1000'
      value='1'
    )
    +button('', '', 'plus').cart-counter__button.cart-counter__button--decrease
